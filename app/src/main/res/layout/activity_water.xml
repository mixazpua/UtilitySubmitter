<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mixazp.utilitysubmitter.activity.WaterActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText_water_date"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Date"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText_water_utilites"
        android:layout_below="@+id/editText_water_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Water utilites"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText_water_utilites2"
        android:layout_below="@+id/button_water_utilites"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Water utilites 2"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText_water_email"
        android:layout_below="@+id/editText_water_utilites2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Email"/>

    <ImageView
        android:id="@+id/ivTextCaptcha"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/editText_water_email"/>

<ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_refresh_black_18dp"
    android:background="@color/white"
    android:id="@+id/imgBtnRefresh"
    android:layout_below="@+id/ivTextCaptcha"
    />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_water1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_send_white_18dp"/>
</LinearLayout>