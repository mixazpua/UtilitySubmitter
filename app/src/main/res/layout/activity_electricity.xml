<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mixazp.utilitysubmitter.activity.ElectricityActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText_electricity_date"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Date"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText_electricity_utilites"
        android:layout_below="@+id/editText_electricity_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Electricity utilites"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText_electricity_utilites2"
        android:layout_below="@+id/button_electricity_utilites"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Electricity utilites 2"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText_electricity_email"
        android:layout_below="@+id/editText_electricity_utilites2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Email"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_electricity1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_send_white_18dp"/>
</LinearLayout>